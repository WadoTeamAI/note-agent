# Environment Configuration Template
# Copy this file to .env.local and replace the placeholder values

# Required: Google Gemini AI API Key
# Get your API key from: https://ai.google.dev/
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Google Search API (for enhanced research)
# Get API key from: https://developers.google.com/custom-search/v1/introduction
NEXT_PUBLIC_GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
NEXT_PUBLIC_SEARCH_ENGINE_ID=your_search_engine_id_here

# Optional: Tavily API (for fact-checking)
# Get API key from: https://tavily.com/
NEXT_PUBLIC_TAVILY_API_KEY=your_tavily_api_key_here

# Optional: Supabase (for data storage and user authentication)
# Get these from: https://app.supabase.com/
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: X (Twitter) API (for social media integration)
# Get API keys from: https://developer.x.com/
NEXT_PUBLIC_X_API_KEY=your_x_api_key_here
NEXT_PUBLIC_X_API_SECRET=your_x_api_secret_here
NEXT_PUBLIC_X_ACCESS_TOKEN=your_x_access_token_here
NEXT_PUBLIC_X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# Development Settings
NODE_ENV=development